{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}


{% block body %}
<a href="/logout"><button type="button">Cerrar Sesion</button></a>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div>
    {{ form(form) }}
    </div>
    <ul>
    {% for movie in results %}
      <div class="row">
        <a href="pelicula\?id={{ movie.imdbID }}" ><div class="col-md-6 click"  >{{ movie.Title }}<br><img src="{{ movie.Poster }}" href="pelicula\?id={{ movie.imdbID }}" height="200" width="200" ></div></a>
        <div id="informacion" onload="myFunction()"></div>
      </div>
    {% endfor %}
    </ul>

</div>
{% endblock %}

{% block javascripts %}
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <script src="{{ asset('js/mostrar.js') }}" type="text/javascript"></script>
{% endblock %}
