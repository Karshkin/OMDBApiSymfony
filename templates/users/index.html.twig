{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

{% endblock %}

{% block body %}
<a href="/logout"><button type="button" class="btn btn-block">Cerrar Sesion</button></a>
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tus peliculas favoritas</h1>

    <ul>
       {% for movie in movies %}
       <li class="list-group-item"><a href="pelicula\?id={{ movie.imdbID }}">{{ movie.title }}</a></li>
       {% endfor %}
   </ul>
   <a href="/busqueda"><button type="button" class="btn btn-block ">Volver al buscador</button></a>

</div>
{% endblock %}
